<!-- 유저 검색 form_tag -->
<%= form_tag("/home/searchresult", method: "get") do %>
  <%= label_tag(:search, "친구 찾기") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<!-- 유저 검색 결과 -->
<% @result.each do |user|%>
    <p><%= user.email%></p>
<% end %>

<!-- 글 작성 form_tag -->
<%= form_tag("/home/create", method: "get") do %>
  <%= hidden_field_tag(:user_id, current_user.id) %>
