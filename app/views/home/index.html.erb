<!-- 유저 검색 form_tag -->
<%= form_tag("/home/searchresult", method: "get") do %>
  <%= label_tag(:search, "친구 찾기") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<!-- 모든 유저 출력 -->
<p>
  <h5>모든 유저</h5>
  <% @users.each do |user| %>
      <p><%= user.email%></p>
  <% end %>
</p>

<!-- 글 작성 form_tag -->
<%= form_tag("/home/create", method: "get") do %>
  <%= hidden_field_tag(:user_id, current_user.id) %>
  <%= text_field_tag(:content) %>
  <%= submit_tag("글 작성") %>
<% end %>

